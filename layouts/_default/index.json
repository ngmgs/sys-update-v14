[
  {{- range $i, $e := .Site.RegularPages -}}
  {{- if $i -}}, {{- end -}}
  {
    "title": {{ .Title | jsonify }},
    "permalink": {{ .Permalink | jsonify }},
    "summary": {{ .Summary | plainify | jsonify }},
    "content": {{ .Plain | jsonify }},
    {{/* サマリーのHTMLから画像URLを正規表現で抽出 */}}
    {{- $imgSrc := "" -}}
    {{- $res := findRE `src="([^"]+)"` .Summary 1 -}}
    {{- if $res -}}
      {{- $imgSrc = (index $res 0 | replaceRE `src="([^"]+)"` "$1") -}}
    {{- end -}}
    "image": {{ $imgSrc | jsonify }}
  }
  {{- end -}}
]

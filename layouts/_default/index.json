[
  {{- range $i, $e := .Site.RegularPages -}}
  {{- if $i -}}, {{- end -}}
  {
    "title": {{ .Title | jsonify }},
    "permalink": {{ .Permalink | jsonify }},
    "summary": {{ .Summary | plainify | jsonify }},
    "content": {{ .Plain | jsonify }},
    "image": {{ with .Params.cover.image }}{{ . | absURL | jsonify }}{{ else }}""{{ end }}
  }
  {{- end -}}
]

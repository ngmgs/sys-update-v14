[
  {{- range .Site.RegularPages -}}
  {
    "title": {{ .Title | jsonify }},
    "permalink": {{ .Permalink | jsonify }},
    {{/* descriptionがあれば優先し、なければSummaryを160文字で取得 */}}
    "summary": {{ (or .Description (printf "%s..." (.Summary | plainify | truncate 160))) | jsonify }},
    {{- $imgSrc := "" -}}
    {{- $res := findRE `src="([^"]+)"` .Content 1 -}}
    {{- if $res -}}
      {{- $imgSrc = (index $res 0 | replaceRE `src="([^"]+)"` "$1") -}}
    {{- end -}}
    "image": {{ $imgSrc | jsonify }}
  },
  {{- end -}}
  {} 
]
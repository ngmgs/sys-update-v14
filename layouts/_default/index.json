[
  {{- range .Site.RegularPages -}}
  {{- /* 検索ページ自体は結果に出さない */ -}}
  {{- if ne .Layout "search" -}}
  {
    "title": {{ .Title | jsonify }},
    "permalink": {{ .Permalink | jsonify }},
    "date": {{ .Date.Format "2006-01-02" | jsonify }},
    {{- /* 優先順位: Description > Summary(160文字) */ -}}
    "summary": {{ (or .Params.description (.Summary | plainify | truncate 160)) | jsonify }},
    {{- $imgSrc := "" -}}
    {{- $res := findRE `src="([^"]+)"` .Content 1 -}}
    {{- if $res -}}
      {{- $imgSrc = (index $res 0 | replaceRE `src="([^"]+)"` "$1") -}}
    {{- end -}}
    "image": {{ $imgSrc | jsonify }}
  },
  {{- end -}}
  {{- end -}}
  {} 
]